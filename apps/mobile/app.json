{
  "expo": {
    "name": "MyFast",
    "slug": "myfast",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "myfast",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#0D0B0F"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.myfast.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0D0B0F"
      },
      "package": "com.myfast.app"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "expo-notifications",
      "expo-sharing",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "minSdkVersion": 26
          }
        }
      ],
      [
        "react-native-health",
        {
          "healthSharePermission": "Allow MyFast to read your health data for weight sync.",
          "healthUpdatePermission": "Allow MyFast to write fasting sessions to Apple Health."
        }
      ],
      "expo-health-connect",
      "./plugins/widget-plugin"
    ]
  }
}
